<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GivePassportFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back_add"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuqaro ma'lumotlarini qo'shish"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/edt_man_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Fuqaroning ismi"
                android:padding="16dp" />

            <EditText
                android:id="@+id/edt_man_soname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Fuqaroning familiyasi"
                android:padding="16dp" />

            <EditText
                android:id="@+id/edt_man_o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Otasining ismi"
                android:padding="16dp" />

            <Spinner
                android:id="@+id/spinner_viloyat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:entries="@array/viloyat1"
                android:padding="16dp" />

            <EditText
                android:id="@+id/edt_shahar_tuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Shahar tuman"
                android:padding="16dp" />

            <EditText
                android:id="@+id/edt_uy_manzili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Uyining manzili"
                android:padding="16dp" />

            <TextView
                android:id="@+id/student_date_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center_vertical"
                android:hint="18/10/2021"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:drawableEndCompat="@drawable/ic_vectorkalendar" />

            <TextView
                android:id="@+id/edt_passport_uddati"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:gravity="center"
                android:hint="Passport muddati"
                android:padding="16dp"
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/spinner_jinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edt_fon"
                android:entries="@array/jinsi"
                android:gravity="center"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/image_add"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_image_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Fuqaroning rasmi 3_4"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/btn_save"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/green"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Saqlash"
                        android:textColor="@color/white"
                        android:textSize="19sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>